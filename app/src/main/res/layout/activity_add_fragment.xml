<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_AddTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="상품등록"
        android:textAlignment="center"
        android:textColor="#535353"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_addItemInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="판매하려는 상품을 등록해주세요"
        android:textColor="#535353"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_AddTitle" />

    <TextView
        android:id="@+id/tv_r_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:text="상품명"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_addItemInfo" />

    <TextView
        android:id="@+id/tv_r_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="상품설명"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_r_1" />

    <TextView
        android:id="@+id/tv_r_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="초기가격"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_r_2" />

    <EditText
        android:id="@+id/et_r_1"
        android:layout_width="293dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="아이템이름은 무엇인가요?"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/tv_r_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_addItemInfo" />

    <EditText
        android:id="@+id/et_r_3"
        android:layout_width="272dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="아이템의 적정가격을 알려주세요"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/tv_r_3"
        app:layout_constraintTop_toBottomOf="@+id/et_r_2" />

    <EditText
        android:id="@+id/et_r_2"
        android:layout_width="368dp"
        android:layout_height="116dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="이 아이템의 매력을 적어주세요!"
        android:inputType="textImeMultiLine"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_r_2" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="125dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FF5722"
        android:text="등록하기"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_cncl"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_add_cncl"
        android:layout_width="125dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#919191"
        android:text="취소"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add" />
</android.support.constraint.ConstraintLayout>